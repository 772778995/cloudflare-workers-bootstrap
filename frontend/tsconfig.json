{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["../backend/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../backend/src/types/apis.d.ts",
    "../backend/src/api/**/*.d.ts",
    "../backend/src/api/**/*.dto.ts"
  ]
}
